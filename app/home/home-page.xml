<Page actionBarHidden="false"
	navigatingTo="onNavigatingTo" 
	xmlns="http://schemas.nativescript.org/tns.xsd">
	
	<ActionBar flat="true">
		<GridLayout columns="*, 10, auto, 20" width="100%">
			<Label textWrap="true" col="0">
				<FormattedString>
						<Span text="&#xf111;" class="fas" fontSize="12" color="{{ isConnected ? '#4CAF50' : '#F44336' }}" />
						<Span text="&nbsp;&nbsp;" />
						<Span text="{{ isConnected ? 'online' : 'offline' }}" fontSize="16" />
				</FormattedString>
			</Label>
			<!-- <Label text="KBBI" class="popin-r text-black-100 text-[24px]" col="0" /> -->
			<!-- <Label text="&#xf2bd;" class="fas text-[24px]" col="2" /> -->
			<Label col="2"
					textWrap="true"
					class="popin-l">
				<FormattedString>
					<Span text="Penanda Buku" />
					<Span text="&nbsp;&nbsp;" />
					<Span text="&#xf02e;" class="far" />
				</FormattedString>
			</Label>
		</GridLayout>
	</ActionBar>
	<GridLayout rows="auto, *, 0, auto, 0" class="p-5">
	
		<StackLayout verticalAlignment="middle" row="1">
			<Label
				text="&#xf5da;"
				textWrap="true"
				class="text-left text-gray-700 fas text-[36px]"
				/>
			<Label
				text="Kamus Besar Bahasa Indonesia"
				textWrap="true"
				class="text-left text-black popin-r text-[24px]"
				/>
			<Button
					text="Cari kata atau peribahasa..."
					textWrap="true"
					tap="searchTap"
					class="text-left text-black popin-r text-[14px] rounded-full bg-gray-200 px-5 py-3 active:bg-gray-350 active:scale-95 transition duration-150"
			/>
		</StackLayout>
		<StackLayout verticalAlignment="middle" row="3">
			<Label
				text=""
				textWrap="true"
				class="w-auto text-center text-blue-400 text-[14px] active:bg-blue-200 active:scale-95 transition duration-150"
			>
				<FormattedString>
					<Span class="fas" text="&#xf641;" />
					<Span text="&nbsp;&nbsp;" />
					<Span class="popin-r" text="Tonton Iklan Sekarang" />
				</FormattedString>
			</Label>
			<Label
				text="Dukung kami dengan meluangkan waktu untuk menonton iklan. Terima kasih."
				textWrap="true"
				class="text-center text-gray-700 italic popin-r text-[12px] mt-2 px-5"
			/>
			
		</StackLayout>
	</GridLayout>
</Page>
