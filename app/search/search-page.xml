<Page actionBarHidden="false"
	navigatingTo="onNavigatingTo" 
	xmlns="http://schemas.nativescript.org/tns.xsd">
	
	<ActionBar flat="true">
		<GridLayout columns="*, 10, auto, 15" width="100%">
			<Label class="text-black" col="0">
				<FormattedString>
					<Span text="{{ recentSearches.length ? 'Pencarian Terkini' : 'Pencarian' }}" class="popin-b" />
				</FormattedString>
			</Label>
			<Label tap="goBack" col="2" textWrap="true">
				<FormattedString>
					<Span text="&#xf00d;" class="fas text-black text-[18px]" />
					<!-- <Span text="&nbsp;&nbsp;" />
					<Span text="Tutup" class="popin-r text-black" /> -->
				</FormattedString>
			</Label>
		</GridLayout>
	</ActionBar>
	<GridLayout rows="*, 5, auto, 30, auto, 10, auto, 0" class="px-5 pb-5">
		<ListView 
			items="{{ recentSearches }}" 
			visibility="{{ recentSearches.length ? 'visible' : 'collapsed' }}" 
			row="0">
			<ListView.itemTemplate>
				<GridLayout columns="*">
					<Label col="1" textWrap="true" class="text-[12px] my-2">
						<FormattedString>
							<Span text="&#xf1da;" class="fas" />
							<Span text="&nbsp;&nbsp;&nbsp;" />
							<Span text="{{ word }}" class="popin-r" />
						</FormattedString>
					</Label>
				</GridLayout>
			</ListView.itemTemplate>
		</ListView>

		<ListView 
			items="{{ autoComplete }}" 
			itemTap="onTapAutoComplete"
			visibility="{{ autoComplete.length ? 'visible' : 'collapsed' }}"
			row="0">
			<ListView.itemTemplate>
				<GridLayout columns="auto, auto, *">
					<Label col="0" textWrap="true" class="text-[12px] my-2">
						<FormattedString>
							<Span text="&#xf002;" class="fas" />
							<Span text="&nbsp;&nbsp;&nbsp;" />
							<Span text="{{ searchWord }}" class="popin-br" />
							<Span text="{{ otherWord }}" class="popin-r" />
						</FormattedString>
					</Label>
				</GridLayout>
			</ListView.itemTemplate>
		</ListView>

		<!-- Trending Word Today -->
		<!-- <StackLayout 
			class="bg-blue-100 py-3 px-1 rounded"
			row="2" visibility="{{ loadingLoadMore ? 'visible' : 'collapsed' }}">
			<Label class="text-center text-blue-700 text-[12px]">
				<FormattedString>
					<Span text="&#xf783;" class="fas" />
					<Span text="&nbsp;&nbsp;" />
					<Span text="Kata Hari Ini" class="popin-r" />
				</FormattedString>
			</Label>
			<Label class="text-center italic text-black text-[14px]">
				<FormattedString>
					<Span text="Bagaimana" class="popin-r" />
				</FormattedString>
			</Label>
		</StackLayout> -->

		<!-- Text Info -->
		<Label 
			class="text-center text-orange-400 text-[12px]" 
			visibility="{{ recentSearches.length ? 'visible' : 'collapsed' }}"
			row="4">
			<FormattedString>
				<Span text="&#xf0eb;" class="far" />
				<Span text="&nbsp;&nbsp;" />
				<Span text="Anda dapat mencari kata atau peribahasa disini" class="popin-r" />
			</FormattedString>
		</Label>

		<!-- Searching Form -->
		<GridLayout 
			columns="auto, 5, *, 5, auto" 
			borderRadius="10" 
			borderWidth="1" 
			borderColor="#9E9E9E"
			class="px-3 py-1"
			row="6">
			<Label
				text="&#xf5da;"
				textWrap="true"
				class="text-left text-gray-700 fas text-[20px]"
				col="0"
				/>
			<TextField 
				text="{{ searchText }}"
				hint="Ketikan sesuatu untuk mencari..." 
				background="#FFF" 
				fontSize="14"
				textChange="onTextChangeSearch"
				returnKeyType="search" 
				returnPress="onSubmitSearch"
				col="2" />
				<Label
					text="&#xf057;"
					textWrap="true"
					tap="onClearSearch"
					class="text-left text-gray-400 far text-[16px]"
					col="4"
					/>
		</GridLayout>
	</GridLayout>
</Page>
