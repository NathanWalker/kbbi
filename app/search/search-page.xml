	</ActionBar>
	<GridLayout rows="*, 5, auto, 30, auto, 10, auto, 0" class="px-5 pb-5">
		<GridLayout rows="auto, 0, *" row="0" 
			visibility="{{ viewMode === 'SEARCH' ? 'visible' : 'collapsed' }}">
			<Label
				textWrap="true"
				visibility="{{ recentSearches.length ? 'visible' : 'collapsed' }}" 
				class="text-left text-[10px] my-3"
				col="0">
				<FormattedString>
					<Span text="PENCARIAN TERKINI" class="popin-br text-gray-600" />
				</FormattedString>
			</Label>
			<ListView 
				items="{{ recentSearches }}" 
				itemTap="onTapRecentSearches"
				visibility="{{ recentSearches.length ? 'visible' : 'collapsed' }}" 
				row="2">
				<ListView.itemTemplate>
					<GridLayout columns="*">
						<Label col="1" textWrap="true" class="text-[12px] my-2">
							<FormattedString>
								<Span text="&#xf1da;" class="fas" />
								<Span text="&nbsp;&nbsp;&nbsp;" />
								<Span text="{{ word }}" class="popin-r" />
							</FormattedString>
						</Label>
					</GridLayout>
				</ListView.itemTemplate>
			</ListView>

			<Label
				textWrap="true"
				visibility="{{ autoComplete.length ? 'visible' : 'collapsed' }}" 
				class="text-left text-[10px] my-3"
				col="0">
				<FormattedString>
					<Span text="SARAN PENCARIAN" class="popin-br text-gray-600" />
				</FormattedString>
			</Label>
			<ListView 
				items="{{ autoComplete }}" 
				itemTap="onTapAutoComplete"
				visibility="{{ autoComplete.length ? 'visible' : 'collapsed' }}"
				row="2">
				<ListView.itemTemplate>
					<GridLayout columns="auto, auto, *">
						<Label col="0" textWrap="true" class="text-[12px] my-2">
							<FormattedString>
								<Span text="&#xf002;" class="fas" />
								<Span text="&nbsp;&nbsp;&nbsp;" />
								<Span text="{{ searchWord }}" class="popin-br" />
								<Span text="{{ otherWord }}" class="popin-r" />
							</FormattedString>
						</Label>
					</GridLayout>
				</ListView.itemTemplate>
			</ListView>
		</GridLayout>

		<GridLayout rows="auto, 0, *" row="0"
			visibility="{{ viewMode === 'RESULT' ? 'visible' : 'collapsed' }}">
			<Label
				textWrap="true"
				class="text-left text-[10px] mt-3 mb-2"
				col="0">
				<FormattedString>
					<Span text="HASIL PENCARIAN" class="popin-br text-gray-600" />
				</FormattedString>
			</Label>

			<ListView separatorColor="#FFF"
				items="{{ localResultOfSearch }}"
				visibility="{{ localResultOfSearch.length ? 'visible' : 'collapsed' }}" 
				row="2">
				<ListView.itemTemplate>
					<StackLayout >
					<Label textWrap="true" class="text-[24px] my-2">
						<FormattedString>
							<Span text="{{ word }}" class="popin-r" />
						</FormattedString>
					</Label>
					<HtmlView html="{{ arti }}" />
				</StackLayout>
				</ListView.itemTemplate>
			</ListView>
			<!-- <ScrollView row="2">
