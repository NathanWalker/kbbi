<Page actionBarHidden="false"
	navigatingTo="onNavigatingTo" 
	xmlns="http://schemas.nativescript.org/tns.xsd"
	xmlns:ui="@nativescript/firebase-admob">
	
	<ActionBar flat="false">
		<GridLayout 
			columns="*, 5, auto, 15">
			<Label 
				text="{{ keyword }}" 
				class="text-left text-black"
				col="0" />
			<Button
				text="&#xf00d;"
				textWrap="true"
				tap="close"
				class="text-center text-white fas border-none rounded-full bg-black active:bg-gray-800 active:scale-95 transition duration-150"
				width="50"
				col="2"
				/>
			
		</GridLayout>
	</ActionBar>
	
	<GridLayout rows="10, *, 0, auto" class="px-5 pb-5">
		<GridLayout rows="auto, 0, *" row="1">
			

			<ListView separatorColor="#FFF"
				items="{{ data }}"
				visibility="{{ data.length ? 'visible' : 'collapsed' }}" 
				row="2">
				<ListView.itemTemplate>
					<StackLayout >
						<Label textWrap="true" class="text-[24px] my-2">
							<FormattedString>
								<Span text="{{ word }}" class="popin-r" />
							</FormattedString>
						</Label>
						<HtmlView html="{{ arti }}" />

						<ui:BannerAd
							visibility="{{ index === 0 ? 'visible' : 'collapsed' }}"
							height="70"
							width="350"
							unitId="ca-app-pub-1640120316722376/2423878232"
							layoutChanged="bannerAdLoaded" />
					</StackLayout>
				</ListView.itemTemplate>
			</ListView>
		</GridLayout>

		<!-- Text Info -->
		<StackLayout class="mt-2" row="3">
			<ui:BannerAd
				height="70"
				width="350"
				unitId="ca-app-pub-1640120316722376/2423878232"
				layoutChanged="bannerAdLoaded" />
		</StackLayout>
	</GridLayout>
</Page>
